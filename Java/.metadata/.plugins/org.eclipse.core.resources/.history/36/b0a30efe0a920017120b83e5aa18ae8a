
public class Test02 {
	// 입력 1: 마크가 되는 문자열
	// 입력 2: 출력할 줄 수
	
	
	// bbbbA
	// bbbAA
	// bbAAA
	// bAAAA
	// AAAAA
	
	//    a
	//   aaa
	//  aaaaa
	// aaaaaaa
	//aaaaaaaaa
	
	// run("b", 5)

	
	public void run(String mark, int lines) {
		
		
		
		/*
		for (int b = 0 ; b < lines ; b = b+1) {
			for (int outIndex = 0; outIndex < b ; outIndex++) {
				System.out.print(mark);
			}		
			System.out.println("" + "A");
		}
		
		for (int a = 0 ; a < 5 ; a = a++) {
			for (int inIndex = 4; inIndex > a ; inIndex--) {
				System.out.print("");
			}
			
			for (int k = 0; k < k + 1; k++) {
				System.out.println(mark);
			}
			System.out.println("");
		}
		*/
		/* 공백이 10개에서 마이너
		 * A앞에 공백을 하나씩 추가
		 * */
		
		
		
		
		/*
		for(int index = 0 ; index < lines ; index=index+1) {
			for (int innerIndex = 0; innerIndex<index+1; innerIndex++) {
				System.out.print(mark);
			}
			System.out.println("");
		}
		*/
		for (int i = 0; i < lines; i++) {
		    for (int j = 1; j < lines - i; j++) {
		        System.out.print(" ");
		    }
		    for (int k = 0; k < i * 2 + 1; k++) {
		        System.out.print("A");
		    }
		    System.out.println();
		}

		for (int i = lines; i > 0; i--) {
		    for (int j = lines - i; j > 0; j--) {
		        System.out.print(" ");
		    }
		    for (int k = i * 2 - 1; k > 0; k--) {
		        System.out.print("A");
		    }
		    System.out.println();
		}
		
		
	}		
}