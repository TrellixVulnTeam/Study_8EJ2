
public class ControlFlow {
	//조건문
	// if switch
	public void checkIf() {
		int a = 10;
		int b = 5;
		
		if (a > b) {
			// a가 b보다 크면 실행되는 영역
			System.out.println("a가 b보다 큽니다");
		}else if (a == b){
			// a와 b가 같으면 실행되는 영역
		}else {
			// 그 외 조건일 때 실행되는 영역
		}
	}
	
	public void checkSwitch() {
		int a = 10;
		int b = 5;
		switch(a) {
			case 5 :
				System.out.println("a의 값이 5입니다.");
			case 10 :
				System.out.println("a의 값이 10입니다.");
		}
		
	}
	//반복문
	// for while 
}
