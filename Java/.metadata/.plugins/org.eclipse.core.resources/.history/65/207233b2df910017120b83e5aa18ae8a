public class Calc {
	//마트에서 물건을 사고 거스름돈 계산
	public static void main(String args) {
		Calc newClass = new Calc();
		newClass.calc(10000, 3750);
	}
	
	public void calc(int money, int price) {
		
		int change = money - price;
		
	    System.out.printf("거스름돈 = %d \n", change);
	    int temp = change/5000;
	    System.out.printf("5000원 = %d \n", temp);
	    change = change % 5000;
	    temp = change/1000;
	    System.out.printf("1000원 = %d \n", temp);
	    change = change % 1000;
	    temp = change / 5000;
		
		
	}
	
	
}
